        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Height="61" Margin="269,90,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="185" TextAlignment="Center"/>
        <Button x:Name="button1" Content="To euro" HorizontalAlignment="Left" Height="69" Margin="47,195,0,0" VerticalAlignment="Top" Width="185" Click="button1_Click"/>
        <Button x:Name="button2" Content="To markka" HorizontalAlignment="Left" Height="69" Margin="269,195,0,0" VerticalAlignment="Top" Width="185" Click="button2_Click"/>

    </Grid>
</Window>
