        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Height="57" Margin="30,28,0,0" TextWrapping="Wrap" Text="Write amount of money:" VerticalAlignment="Top" Width="221" TextAlignment="Center"/>
