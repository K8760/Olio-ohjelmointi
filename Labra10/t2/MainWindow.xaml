<Window x:Class="t2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:t2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" FontSize="20">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Login:" Margin="10"/>
        <TextBox x:Name="log" Grid.Column="1" Grid.Row="0" Margin="10"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="10" Text="Password:"/>
        <TextBox x:Name="pass" Grid.Column="1" Grid.Row="1" Margin="10"/>
        <Button x:Name="button" Content="Login" Grid.Column="1"  Grid.Row="2" Margin="10, 10, 80, 10" Click="button_Click"/>
    </Grid>
</Window>
